{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/store/store-sidebar.css') }}">
    {% endblock %}
    {% block javascript %}
    {% endblock %}
    <div class="sidebar box-shadow">
        <div class="sidebar__presentation flex">
            <div class="container-avatar flex">
                <img src="{{ asset('images/store/cow.jpg') }}" alt="avatar boutique"></div>
                <h1 class="subtitle marginbt-1">
                    {{ storeInfo.name }}
                </h1>
                <p class="marginbt-1">
                    {{ storeInfo.description }}
                </p>
                <div class="ratingAndFavorite marginbt-1">
                    <div class="rating marginbt-1">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="far fa-star"></i>
                    </div>

            <div class="favorite">
                {% if app.user.getfavourites  %}
               <a href="{{ path('user_add_favorite', {id: storeInfo.id}) }}"> <i class="far fa-heart" id="favorite_button"></i> </a>
                {% else %}
            <a href="{{ path('user_add_favorite', {id: storeInfo.id}) }}"> <i class="fa-solid fa-heart"></i> </a>
                {% endif %}
            </div>
        </div>

    </div>

    <div class="sidebar__infos">

        <div class="item flex">
            <i class="fas fa-store"></i>
            {% for storeAddress in storeInfo %}
            <div class="text-content">
                <p>{{ storeAddress.street }}</p>
                <p>{{ storeAddress.city }}, <span>{{ storeAddress.zipcode }}</span></p>
            </div>
            {% endfor %}
        </div>

        <div class="item flex">
            <i class="fas fa-phone"></i>
            <div class="text-content">
                <p>{{ storeInfo.phonenumber }}</p>
            </div>
        </div>

        <div class="item flex">
            <i class="fas fa-envelope"></i>
            <div class="text-content">
                <p>{{ storeInfo.email }}</p>
            </div>
        </div>

        <div class="item flex">
            <i class="fas fa-calendar"></i>
            <div class="text-content">
                <p>Jours d'ouverture :</p>
                <p><i class="fas fa-angle-right"></i> Jeudi</p>
                <p><i class="fas fa-angle-right"></i> Vendredi</p>
            </div>
        </div>

        <div class="item flex">
            <i class="fas fa-clock"></i>
            <div class="text-content">
                <p>Heures d'ouverture :</p>
                <p><i class="fas fa-angle-right"></i> 9h - 15h</p>
            </div>
        </div>

        <div class="item flex">
            <i class="fas fa-money-bill-wave"></i>
            <div class="text-content">
                <p>Moyen de paiement :</p>
                <p><i class="fas fa-angle-right"></i> Esp√®ce</p>
                <p><i class="fas fa-angle-right"></i> Carte banquaire</p>
            </div>
        </div>

    </div>

</div>

