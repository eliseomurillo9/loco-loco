{% extends 'base.html.twig' %}

{% block title %}
    {# "Boutique" à remplacer par le nom en dynamique de la vrai boutique #}
    Boutique - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/store/store-single.css') }}">
{% endblock %}

{% block body %}
    <section class="single">

        <div class="single__banniere">
            <img src="{{ asset('images/store/banniere.png')}}" alt="banniere de la boutique">
        </div>

        <div class="flex top-layout">

            <div class="single__sidebar">
                {% include "components/store-sidebar.html.twig" %}
            </div>

            <div class="single__tab box-shadow flex">
                <a class="tab subtitle inactive-tab" href="{{ path('store_single-about')}}">A propos</a>
                <a class="tab subtitle active-tab" href="{{ path('store_single')}}">Boutique</a>
            </div>

            <div class="content-layout flex">
                <div class="single__store-content">
                    <p class="marginbt-1">Hauts-de-France(59) / Ville</p>

                    <div class="products-list__container">
                        <h2 class="subtitle marginbt-1">Catégorie</h2>

                        <div class="products-list flex">

                            {# --- PRODUCT ITEM (AVAILABLE) START --- #}
                            <div class="product-item box-shadow flex">
                                <div class="img__container flex">
                                    <img src="{{ asset('images/products/milk.png')}}" alt="product">
                                </div>
                                <div class="text-content">
                                    <h4 class="marginbt-1">Titre</h4>
                                    <span>1€</span>
                                </div>
                                <button class="btn-second flex">
                                    <a class="flex" href="#">
                                        Ajouter à mon panier
                                    </a>
                                </button>
                            </div>
                            {# --- PRODUCT ITEM (AVAILABLE) END --- #}

                            {# --- PRODUCT ITEM (SOLD-OUT) START --- #}
                            <div class="product-item sold-out box-shadow flex">
                                <div class="img__container flex">
                                    <img src="{{ asset('images/tomatoes-photo.jpg')}}" alt="product">
                                </div>
                                <div class="text-content">
                                    <h4 class="marginbt-1">Titre</h4>
                                    <span>1€</span>
                                </div>
                                <button class="btn-second flex">
                                    <a class="flex" href="#">
                                        Rupture de stock
                                    </a>
                                </button>
                            </div>
                            {# --- PRODUCT ITEM (SOLD-OUT) END --- #}

                            {# --- PRODUCT ITEM (AVAILABLE) START --- #}
                            <div class="product-item box-shadow flex">
                                <div class="img__container flex">
                                    <img src="{{ asset('images/products/milk.png')}}" alt="product">
                                </div>
                                <div class="text-content">
                                    <h4 class="marginbt-1">Titre</h4>
                                    <span>1€</span>
                                </div>
                                <button class="btn-second flex">
                                    <a class="flex" href="#">
                                        Ajouter à mon panier
                                    </a>
                                </button>
                            </div>
                            {# --- PRODUCT ITEM (AVAILABLE) END --- #}

                            {# --- PRODUCT ITEM (AVAILABLE) START --- #}
                            <div class="product-item box-shadow flex">
                                <div class="img__container flex">
                                    <img src="{{ asset('images/products/milk.png')}}" alt="product">
                                </div>
                                <div class="text-content">
                                    <h4 class="marginbt-1">Titre</h4>
                                    <span>1€</span>
                                </div>
                                <button class="btn-second flex">
                                    <a class="flex" href="#">
                                        Ajouter à mon panier
                                    </a>
                                </button>
                            </div>
                            {# --- PRODUCT ITEM (AVAILABLE) END --- #}

                        </div>
                    </div>
                </div>
            </div>

        </div>

    </section> 
{% endblock %}