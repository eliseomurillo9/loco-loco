                <div class="iconsWithPictures flex">
                    <i class="fas fa-chevron-left"></i>
                        <div class="container-pictures flex">
                            <div class="container__picture">
                                <img src="{{ asset('images/store/factory.jpg')}}" alt="vachette">
                            </div>
                            <div class="container__picture">
                                <img src="{{ asset('images/store/middle-size.jpg')}}" alt="vachette">
